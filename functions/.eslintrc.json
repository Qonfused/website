{
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "plugins": [
    "promise"
  ],
  "extends": "eslint:recommended",
  "rules": {
    "array-callback-return": 1,
    "callback-return": 2,
    "consistent-return": 1,
    "eqeqeq": 2,
    "for-direction": 2,
    "getter-return": 2,
    "handle-callback-err": 2,
    "no-alert": 2,
    "no-await-in-loop": 2,
    "no-caller": 2,
    "no-catch-shadow": 1,
    "no-compare-neg-zero": 2,
    "no-console": "off",
    "no-debugger": "off",
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 1,
    "no-extra-bind": 1,
    "no-extra-label": 1,
    "no-floating-decimal": 2,
    "no-implicit-coercion": 1,
    "no-loop-func": 1,
    "no-mixed-spaces-and-tabs": "off",
    "no-new-func": 2,
    "no-new-wrappers": 1,
    "no-path-concat": 1,
    "no-regex-spaces": "off",
    "no-shadow-restricted-names": 2,
    "no-template-curly-in-string": 1,
    "no-throw-literal": 2,
    "no-undef": "off",
    "no-unused-vars": "off",
    "prefer-arrow-callback": 1,
    "prefer-promise-reject-errors": 2,
    "promise/always-return": 2,
    "promise/catch-or-return": 2,
    "promise/no-nesting": 1,
    "require-atomic-updates": 1
  }
}
